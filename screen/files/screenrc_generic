hardstatus alwayslastline "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H: %l%{..Y} @ %D%d/%m %c "
caption splitonly "%3n %t"
defutf8 on
autodetach on
startup_message off
vbell off
defscrollback 1000

bind j focus down
bind k focus up
bind t focus top
bind b focus bottom

shelltitle "sh"

# unbind stuff
bind .
bind \\
bind ^\

